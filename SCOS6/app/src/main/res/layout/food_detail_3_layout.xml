<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_fooddetailimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/fooddetailimage2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_fooddetailname"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="菜品3"/>

        <TextView
            android:id="@+id/tv_fooddetailcost"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="价格：￥10.00"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_fooddetailremark"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="菜品备注" />

    <Button
        android:id="@+id/bt_fooddetailchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="点菜" />
</LinearLayout>
